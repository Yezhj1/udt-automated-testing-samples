<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.dashboard.NewsFragment">

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppWidget.Tips.Title"
        android:layout_margin="@dimen/activity_common_item_margin"
        android:text="@string/fragment_home_news_title" />

    <TextView
        android:id="@+id/news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/activity_common_item_margin"
        android:layout_marginRight="@dimen/activity_common_item_margin"
        android:text="@string/fragment_home_news_times1" />

    <RelativeLayout
        android:layout_margin="@dimen/activity_common_item_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_home_news_content1" />

        <TextView
            android:id="@+id/content1"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_home_news_content1" />
    </RelativeLayout>

</LinearLayout>